{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=BotFlow.db"
  },
  "Jwt": {
    "Key": "BotFlowSuperSecretKey@2024!ChangeThisInProduction123456",
    "Issuer": "BotFlow.API",
    "Audience": "BotFlow.Client",
    "ExpiresInMinutes": 60,
    "RefreshTokenExpiresInDays": 7
  },
  "SmtpSettings": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "FromEmail": "noreply@botflow.com",
    "FromName": "BotFlow System",
    "EnableSsl": true
  },
  "App": {
    "BaseUrl": "https://localhost:3000",
    "Name": "BotFlow",
    "Version": "1.0.0",
    "Environment": "Development",
    "DashboardRefreshInterval": 30
  },
  "DashboardSettings": {
    "DefaultTimeRange": "weekly",
    "CacheDurationMinutes": 5,
    "MaxRecentActivities": 10,
    "ChartColors": [
      "#6366F1",
      "#8B5CF6",
      "#EC4899",
      "#F59E0B",
      "#10B981",
      "#3B82F6"
    ]
  },
  "EmailSettings": {
    "SendRealEmails": false,
    "LogEmailsInConsole": true,
    "DefaultFromEmail": "noreply@botflow.com",
    "DefaultFromName": "BotFlow",
    "EnableDailyReports": true,
    "ReportSchedule": "08:00"
  },
  "BotSettings": {
    "DefaultResponseTime": 2.5,
    "MaxResponseTime": 5.0,
    "AutoActivateNewBots": true,
    "TrainingMode": false
  },
  "SocialMediaSettings": {
    "Facebook": {
      "ApiVersion": "v18.0",
      "WebhookVerificationToken": "botflow-webhook-token"
    },
    "Instagram": {
      "ApiVersion": "v18.0"
    },
    "WhatsApp": {
      "ApiVersion": "v18.0"
    },
    "SmtpSettings": {
  "Host": "smtp.gmail.com",
  "Port": "587",
  "Username": "your-email@gmail.com",
  "Password": "your-app-password",
  "FromEmail": "noreply@botflow.com",
  "FromName": "BotFlow System",
  "EnableSsl": "true"
},
"EmailSettings": {
  "SendRealEmails": "true",
  "LogEmailsInConsole": "false"
}
  },
  "AllowedHosts": "*"
